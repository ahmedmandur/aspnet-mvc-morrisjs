@{
    ViewBag.Title = "ASPNET MVC With MorrisJs";
}

@section scripts
{

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>


    <script>

        var morris = null;
    

        $(document).ready(function() {

            //morris initialization
             morris =  Morris.Line({
                // ID of the element in which to draw the chart.
                element: 'myfirstchart',
                // Chart data records -- each entry in this array corresponds to a point on
                // the chart.
                data: [],
                // The name of the data record attribute that contains x-values.
                xkey: 'year',
                // A list of names of data record attributes that contain y-values.
                ykeys: ['value'],
                // Labels for the ykeys -- will be displayed when you hover over the
                // chart.
                labels: ['Value']
            });

            //first or Default call on load
            generator(5);

        });


        function generator(yearsCount) {

            $.ajax({
                url: '@Url.Action("GetData")',
                data: {
                    count: yearsCount
                },
                error: function(err) {
                    console.log(err);
                    alert('error Happened');
                },
                dataType: 'json',
                success: function(data) {
                    console.log(data);
                    morris.setData(data);
                },
                type: 'GET'
            });
        }


        
        $("#generate10").on("click",
            function() {
                generator(10);
            });

        $("#generate5").on("click",
            function() {
                generator(5);
            });

        $("#generate15").on("click",
            function() {
                generator(15);
            });
    </script>


}
<div id="myfirstchart" style="height: 250px;"></div>

<input type="button" class="btn btn-warning" id="generate15" value="Generate 15" />
<input type="button" class="btn btn-success" id="generate10" value="Generate 10" />
<input type="button" class="btn btn-danger" id="generate5" value="Generate 5" />
